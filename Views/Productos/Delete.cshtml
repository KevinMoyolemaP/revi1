@model AlquimiaEsencial.Models.Producto

@{
    ViewData["Title"] = "Eliminar Producto";
}

<h2 class="mt-4 text-center">¿Estás seguro que deseas eliminar este producto?</h2>

<div class="card shadow mx-auto mt-4" style="max-width: 600px;">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-4">Nombre</dt>
            <dd class="col-sm-8">@Model.Nombre</dd>

            <dt class="col-sm-4">Precio</dt>
            <dd class="col-sm-8">$@Model.Precio</dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <div class="text-end">
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                <button type="submit" class="btn btn-danger">Eliminar</button>
            </div>
        </form>
    </div>
</div>
