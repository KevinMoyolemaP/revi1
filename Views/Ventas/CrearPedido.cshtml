@model IEnumerable<AlquimiaEsencial.Models.Producto>

@{
    ViewData["Title"] = "Generar Venta";
}

<h2 class="text-center mb-4">🛒 Selección de Productos</h2>

<form asp-action="ConfirmarVenta" method="post">
    <table class="table table-bordered table-hover shadow">
        <thead class="table-light">
            <tr>
                <th>Producto</th>
                <th>Precio</th>
                <th>Stock</th>
                <th>Cantidad</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var producto in Model)
            {
                <tr>
                    <td>@producto.Nombre</td>
                    <td>$@producto.Precio</td>
                    <td>@producto.Stock</td>
                    <td>
                        <input type="number" name="cantidades[@producto.Id]" class="form-control"
                               value="0" min="0" max="@producto.Stock" />
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-end">
        <button type="submit" class="btn btn-success">✅ Confirmar Venta</button>
        <a asp-controller="Productos" asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>
