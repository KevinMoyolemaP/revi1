@model IEnumerable<AlquimiaEsencial.Models.Categoria>
@{
    ViewData["Title"] = "Categorías";
}

<h2 class="mt-4 text-center">Categorías</h2>

<div class="text-end mb-3">
    <a asp-action="Create" class="btn btn-success">Agregar Nueva Categoría</a>
</div>

<table class="table table-striped table-hover shadow-sm">
    <thead class="table-light">
        <tr>
            <th>Nombre</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nombre</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white">Ver</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
